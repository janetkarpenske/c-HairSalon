@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model HairSalon.Models.Stylist

<h2>Stylist Information</h2>
<hr />
<h3>Stylist Name: @Html.DisplayFor(model => model.Name)</h3>
<hr />
@if (@Model.Clients.Count == 0)
{
  <h4>This stylist does not have any clients right now.</h4>
} 

<h4>@Html.DisplayFor(model => model.Name)'s Clients:</h4>
@foreach (Client client in @Model.Clients)
{
  <li>@client.Name</li>
}
<p>@Html.ActionLink("Back to list of Stylists", "Index")</p>
<p>@Html.ActionLink("Edit", "Edit", new { id = Model.StylistId })</p>
<p>@Html.ActionLink("Remove This Stylist", "Delete", new { id = Model.StylistId })</p>