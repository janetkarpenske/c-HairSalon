@{
  Layout = "_Layout";
}
@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1>Clients</h1>
<hr>
<br>
@using (Html.BeginForm())
{
  @Html.Label("Find Clients by Name")
  @Html.TextBox("Name")
  <input type="submit" value="Find Client" class="btn btn-info btn-sm"/> //value is the button text
}<br>
@if (@Model.Count == 0)
{
  <h3>You don't have any clients yet.</h3>
} 
@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | <strong>Stylist</strong> @client.Stylist.Name</li>
}
<br>
<div class="centerAlign">
<div class="row">
  <div class="col-md-6">
    <p>@Html.ActionLink("Add A New Client", "Create")</p>
  </div>
  <div class="col-md-6">
    <p>@Html.ActionLink("Return to Homepage", "Index", "Home")</p>
  </div>
</div>
</div>
